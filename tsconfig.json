{
  "compilerOptions": {
    "target": "ESNext",
    
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",

    "outDir": "./dist",

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
